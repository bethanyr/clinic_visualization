.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation", "ng-controller" => "topNavController"}
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "#"} Clinic Visualization
    .navbar-collapse.collapse
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li
            = "Welcome #{current_user.doctor.name}, #{current_user.doctor.specialty}"
          %li 
            Patient
            %select{"ng-model" => "selected_patient", "ng-options" => "patient.name for patient in patients"}
            %button{'ng-click' => 'changePatient(selected_patient)'} Change Patient
          %li= link_to 'Sign out', destroy_user_session_path, :method=>'delete'
          %li= link_to 'Help'
          - if current_user.admin?
            %li= link_to 'Admin', admin_root_path 
        - else
          %li= link_to 'Sign in', new_user_session_path
      