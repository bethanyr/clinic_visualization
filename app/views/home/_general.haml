%h1.page-header
  Patient Record for 
  = @patient.name

%h5 
  Gender: 
  = @patient.gender
%h5 
  Age: 
  = @patient.age
%h5
  Height:
  = @patient.height
%h5
  Weight:
  = @patient.weight
%h5
  Notices:
  * Due for Flu Vaccine


%h2 Current Medical Conditions
%table.table.table-striped
  %thead
    %tr
      %th Condition
      %th Doctor
    -@patient.medical_conditions.each do |condition|
      %tr
        %td
          = condition.name
        %td
          = condition.doctor.name

= render 'medical_histories/medical_history'

